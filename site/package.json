{
    "name": "site",
    "private": true,
    "type": "module",
    "scripts": {
        "prepare-app": "tsx --env-file=.env ../internal/scripts/prepare-app",
        "dev": "pnpm prepare-app && next dev",
        "build": "pnpm prepare-app && pnpm build:repo && pnpm build:next",
        "build:repo": "cd ../ && pnpm build && cd site",
        "build:next": "cross-env NODE_OPTIONS=--max-old-space-size=16384 next build",
        "build:css": "node ../packages/cli/dist/bin/index.mjs render \".next/**/*.html\"",
        "start": "next start",
        "lint": "next lint",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@master/colors": "^2.1.0",
        "@master/normal.css": "^3.1.0",
        "@monaco-editor/react": "^4.7.0",
        "@next/mdx": "^15.2.2",
        "class-variant": "^2.0.4",
        "monaco-editor": "^0.52.2",
        "monaco-editor-textmate": "^4.0.0",
        "monaco-textmate": "^3.0.1",
        "next": "^15.2.2",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "theme-mode": "^1.1.1",
        "use-debounce": "^10.0.4",
        "uvcanvas": "^0.2.2"
    },
    "devDependencies": {
        "@shikijs/monaco": "^3.2.1",
        "eslint": "^9.22.0",
        "internal": "workspace:^",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2"
    }
}